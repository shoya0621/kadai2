<h1>Editing</h1>

<%= form_with model:@book, url: "/books/#{@book.id}",method: :patch do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<% end %>

<span><%= link_to "Show","/books/#{@book.id}" %></span>
<span><a href ="/books">Back</a></span>