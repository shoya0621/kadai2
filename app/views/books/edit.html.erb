<h1>Editing</h1>
<% if @book.errors.any? %>
  <p class="warning"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="warning"><%= message%></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model:@book, url: "/books/#{@book.id}",method: :patch do |f| %>
 <div class ="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
 </div>
 <div class ="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
 </div>
 <div class ="action">
   <%= f.submit 'Update Book' %>
 </div>
<% end %>

<span><%= link_to "Show","/books/#{@book.id}" %></span>
<span><a href ="/books">Back</a></span>